<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3F87BF"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="16sp"
        android:layout_marginBottom="20dp"
        android:text="Encender/Apagar dispositivos" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="Lista de dispositivos:" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_encender_apagar_dispositivos"
        android:layout_width="match_parent"
        android:layout_height="350dp" >
    </androidx.recyclerview.widget.RecyclerView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Encender/Apagar dispositivo"
        android:onClick="btn_encender_apagar_dispositivo"
        android:background="@drawable/borde_redondo"
        android:layout_marginBottom="10dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Historial dispositivos"
        android:onClick="btn_historial_dispositivo"
        android:background="@drawable/borde_redondo"
        android:layout_marginBottom="10dp" />

</LinearLayout>